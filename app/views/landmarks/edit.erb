<h2>EDIT LANDMARK</h2>
<form action="/landmarks/<%= @landmark.id %>" method="POST">
  <label>Name: </label><input type="text" name="landmark[name]" value="<%= @landmark.name%>">
  <label>Year completed: </label><input type="integer" name="landmark[year_completed]" value="<%= @landmark.year_completed%>">
  <br><br>

  <label>Choose a figure for the new landmark:</label>
  <%@figures.each do |figure|%>
      <input type="radio" name="landmark[figure_id]" value="<%=figure.id%>" id="figure_<%=figure.id%>"
       <%='checked' if @landmark.figure == figure %>><%=figure.name%></input>
  <%end%>
  <br><br>

  <input type="submit" value="Edit Landmark">
</form>
